$color-1 = #018ded
$color-2 = #fff
$color-3 = rgba(0,0,0,0.1)
$color-4 = #efefef
$color-5 = #000
$color-6 = rgba(0,0,0,0.2)

html
    background $color-1 url("https://unsplash.it/1500/1000?image=881&blur=50")
    background-size cover
    font-family 'helvetica neue'
    text-align center
    font-size 10px

body
    margin 0
    font-size 2rem
    display flex
    flex 1
    min-height 100vh
    align-items center

.clock
    width 30rem
    height 30rem
    border 20px solid $color-2
    border-radius 50%
    margin 50px auto
    position relative
    padding 2rem
    box-shadow 0 0 0 4px $color-3, inset 0 0 0 3px $color-4, inset 0 0 10px $color-5, 0 0 10px $color-6

.clock-face
    position relative
    width 100%
    height 100%
    transform translateY(-3px)

.hand
    width 50%
    height 6px
    background $color-5
    position absolute
    top 50%
    transform-origin 100%
    transform rotate(90deg)
    transition all 0.05s
    transition-timing-function cubic-bezier(0.1, 2.7, 0.58, 1)

.number
    position: absolute
